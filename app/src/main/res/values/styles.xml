<resources  xmlns:card_view="http://schemas.android.com/apk/lib/br.com.pueyo.android.mcao">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/splah_screen</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Mcao" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Mcao.TelaDetalhes" parent="AppTheme.Mcao">
        <item name="android:background">@color/colorMcaoBranco</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Mcao.TextoLabelCard" parent="TextAppearance.StatusBar.EventContent.Title">
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/colorMcaoGrey</item>
    </style>

    <style name="AppTheme.Mcao.TextoLabel">
        <item name="android:padding">2dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppTheme.Mcao.LinhaTransacao">
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/colorMcaoGrey</item>
    </style>

    <style name="AppTheme.Mcao.TextoCodigoGrande">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/colorMcaoOragen</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.Mcao.CardView">
    </style>


    <style name="AppTheme.Mcao.CardView.Label" parent="AppTheme.Mcao.CardView">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppTheme.Mcao.CardView.Label.textoSimplesValores" parent="AppTheme.Mcao.CardView.Label">
        <item name="android:textColor">@color/colorMcaoBranco</item>
    </style>

    <style name="AppTheme.Mcao.CardView.Titulo" parent="AppTheme.Mcao.CardView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorMcaoBlue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="AppTheme.Mcao.DialogOperacao">
        <item name="android:background">@color/colorMcaoWhite</item>
    </style>

    <style name="AppTheme.Mcao.DialogOperacao.TextView" parent="AppTheme.Mcao.DialogOperacao">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorMcaoBlue</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="AppTheme.Mcao.DialogOperacao.EditText" parent="AppTheme.Mcao.DialogOperacao">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorMcaoOragen</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/rounded_border_edit_text</item>
        <item name="android:textColorHint">@color/colorMcaoBlueLight
        </item>

    </style>

</resources>
